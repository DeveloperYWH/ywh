<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">


    <!--头像部分-->
    <RelativeLayout
        android:id="@+id/shop_account"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/orange_dark">

        <TextView
            android:id="@+id/shop_account_able_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:text="可体现金额"/>

        <TextView
            android:id="@+id/shop_account_able_limit_nmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
            android:text="0.0"/>

        <TextView
            android:id="@+id/shop_account_able_limit_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginStart="30dp"
            android:text="已收运费："/>

        <TextView
            android:id="@+id/shop_account_able_limit_nmb_trans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="95dp"
            android:layout_marginStart="105dp"
            android:text="0.0"/>


        <TextView
            android:id="@+id/shop_account_unable_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="170dp"
            android:text="未可体现金额"/>

        <TextView
            android:id="@+id/shop_account_unable_limit_nmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginStart="170dp"
            android:text="0.0"/>


        <TextView
            android:id="@+id/shop_account_day_book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="350dp"
            android:ems="1"
            android:text="账户流水"/>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/shop_data_tab"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/mycolor">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@color/app_main"/>

        <com.gigamole.navigationtabstrip.NavigationTabStrip
            android:id="@+id/shop_data_nts_tab"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            app:nts_active_color="#fff"
            app:nts_color="@color/bod_red_flower"
            app:nts_corners_radius="3.5dp"
            app:nts_factor="0.8"
            app:nts_gravity="bottom"
            app:nts_inactive_color="#81ffffff"
            app:nts_titles="@array/shop_data_titles"
            app:nts_type="point"
            app:nts_typeface="fonts/moon.otf"
            app:nts_weight="7dp"/>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/shop_data_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    </android.support.v4.view.ViewPager>


</LinearLayout>