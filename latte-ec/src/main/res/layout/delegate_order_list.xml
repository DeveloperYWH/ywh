<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/order_list_top_fl"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/mycolor">

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_gravity="center"
            android:layout_marginTop="18dp"
            android:background="@color/app_main"/>

        <com.gigamole.navigationtabstrip.NavigationTabStrip
            android:id="@+id/order_list_nts"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            app:nts_active_color="#fff"
            app:nts_color="@color/bod_red_flower"
            app:nts_corners_radius="3.5dp"
            app:nts_factor="0.8"
            app:nts_gravity="bottom"
            app:nts_inactive_color="#81ffffff"
            app:nts_titles="@array/order_list_titles"
            app:nts_type="point"
            app:nts_typeface="fonts/moon.otf"
            app:nts_weight="7dp"/>

    </FrameLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/order_list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/order_list_top_fl">

    </android.support.v4.view.ViewPager>



</RelativeLayout>